# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
API_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=1433
DB_NAME=digital_certificates
DB_USERNAME=sa
DB_PASSWORD=your_password
DB_DIALECT=mssql
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN='24h'

# External APIs
ORASS_BASE_URL=https://orass-api.example.com
ORASS_API_KEY=your_orass_api_key
ORASS_TIMEOUT=30000

IVORY_ATTESTATION_BASE_URL=https://eattestation.ivoryattestation.app
IVORY_ATTESTATION_TOKEN=your_ivory_attestation_token
IVORY_ATTESTATION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD_PERCENTAGE=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# i18n
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es